<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/light_blue">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/feedbackTitleTextView"
        android:text="Give Us Feedback"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/feedbackInformationTextView"
        android:text="Let us know how you feel about our application and how we could improve your experience."
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="textStart"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selectCategoryTextView"
        android:text="1. Select One Category:"
        android:textSize="16sp"
        android:layout_marginTop="30dp"/>

    <Spinner
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:id="@+id/categorySpinner"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textAlignment="textStart"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yourFeedbackTextView"
        android:text="2. Your Feedback:"
        android:textSize="16sp"
        android:layout_marginTop="35dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/light_blue"
        android:layout_marginTop="20dp" >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/feedbackEditText"
            android:hint="A description of your feedback/suggestion"
            android:inputType="textMultiLine"
            android:gravity="top|start"
            android:lines="5"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submitFeedbackButton"
        android:text="Submit"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

</LinearLayout>