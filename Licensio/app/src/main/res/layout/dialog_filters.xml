<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/filtersTitleTextView"
        android:text="Apply Filters"
        android:textSize="30sp"
        android:padding="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@color/grey"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/filtersTitleTextView">
        <LinearLayout
            android:id="@+id/checkbox_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TherapeuticClassTitleTextView"
                    android:text="Therapeutic Class:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:id="@+id/checkBoxAntiInfectives"
                        android:text="Anti Infectives"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp" />

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:id="@+id/checkBoxOphthal"
                        android:text="Ophthal"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:id="@+id/checkBoxDerma"
                        android:text="Derma"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp" />

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:id="@+id/checkBoxCardiac"
                        android:text="Cardiac"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:id="@+id/checkBoxPainAnalgesics"
                        android:text="Pain Analgesics"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp" />

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:id="@+id/checkBoxAntiMalarials"
                        android:text="Anti Malarials"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:id="@+id/checkBoxGastroIntestinal"
                        android:text="Gastro Intestinal"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="4dp"/>

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:id="@+id/checkBoxVitaminsMineralsNutrients"
                        android:text="Vitamins/Minerals/Nutrients"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="4dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:id="@+id/checkBoxAntiDiabetic"
                        android:text="Anti Diabetic"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp" />

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:id="@+id/checkUrology"
                        android:text="Urology"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:id="@+id/checkBoxGynaecological"
                        android:text="Gynaecological"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp" />

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:id="@+id/checkBoxBloodRelated"
                        android:text="Blood Related"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:id="@+id/checkBoxVaccines"
                        android:text="Vaccines"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="4dp"/>

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:id="@+id/checkBoxSexStimulantsRejuventors"
                        android:text="Sex Stimulants Rejuvenators"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="4dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:id="@+id/checkBoxNeuroCns"
                        android:text="Neuro CNS"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp" />

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:id="@+id/checkBoxHormones"
                        android:text="Hormones"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:id="@+id/checkBoxRespiratory"
                        android:text="Respiratory"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"/>

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:id="@+id/checkBoxAntiNeoplastics"
                        android:text="Anti Neoplastics"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:id="@+id/checkBoxOtologicals"
                        android:text="Otologicals"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"/>

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:id="@+id/checkBoxOphthalOtologicals"
                        android:text="Ophtal Otologicals"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:id="@+id/checkBoxStomatologicals"
                        android:text="Stomatologicals"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp" />

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:id="@+id/checkBoxOther"
                        android:text="Others"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:id="@+id/checkBoxNA"
                        android:text="NA"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp" />


                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/HabitFormingTitleTextView"
                    android:text="Habit Forming:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:id="@+id/checkBoxHabitYes"
                        android:text="Yes"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1" />

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:id="@+id/checkBoxHabitNo"
                        android:text="No"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1" />

                </LinearLayout>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/applyFiltersButton"
                android:text="Apply Filters"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>